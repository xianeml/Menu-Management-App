{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "*"
      ],
      "@/*": [
        "src/*"
      ],
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}